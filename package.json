  },
  "dependencies": {
    "is-canvas-context": "^0.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "create-canvas": "^1.0.0",
    "phantomjs": "^1.9.17",
    "standard": "^5.0.2",
    "tap-spec": "^4.0.0",
    "tape": "^4.0.1",
    "tape-run": "^1.0.0"
  },
  "homepage": "git://github.com/willhoag/force-canvas-context.git",
  "keywords": [

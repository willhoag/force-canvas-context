    {
      "name": "devhoag",
      "email": "dev@willhoag.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/willhoag/force-canvas-context.git"
  },
  "scripts": {
    "build:browser": "browserify -t babelify --standalone forceCanvasContext src/index.es6 --extension .es6 > index.js",
